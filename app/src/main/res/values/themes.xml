<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- LIGHT THEME -->
    <!-- Base application theme. -->
    <style name="Theme.MPlayer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryVariant">@color/blue_secondary</item>
        <item name="colorOnPrimary">@color/pink_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink_primary</item>
        <item name="colorSecondaryVariant">@color/pink_secondary</item>
        <item name="colorOnSecondary">@color/blue_primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>
</resources>