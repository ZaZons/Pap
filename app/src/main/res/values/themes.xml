<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- LIGHT THEME -->
    <!-- Base application theme. -->
    <style name="Theme.MPlayer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="android:colorPrimary">@color/blue_primary</item>
        <!-- Secondary brand color. -->
        <item name="android:colorSecondary">@color/pink_primary</item>

        <!-- Status bar color. -->
        <item name="android:actionBarStyle">@style/CustomActionBar</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="CustomActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/background</item>
    </style>

    <style name="Theme.MPlayer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MPlayer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MPlayer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>